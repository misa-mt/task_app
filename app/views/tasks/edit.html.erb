<% provide(:title, 'Edit Task') %>
<h1>タスク編集</h1>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <%= form_with(model: @task, url: user_task_path(@user), local: true) do |f| %>
      <%= render 'shared/error_messages' %>
      
      <%= f.label :name, class: "label-form" %>
      <%= f.text_field :name, class: "form-control" %>
      
      <%= f.label :details, class: "label-form" %>
      <%= f.text_area :details, class: "form-control", rows: 5 %>
      
      <%= f.submit "更新", class: "btn btn-primary btn-form" %>
      <%= f.submit "キャンセル", class: "btn btn-default btn-form" %>
    <% end %>
  </div>
</div>