<% provide(:title, @user.name) %>
<h1><%= @user.name %>のタスク一覧</h1>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <% #ページネーション %>
    <table class="table table-condensed table-hover" id="table-tasks">
      <thead>
        <tr>
          <th><%= Task.human_attribute_name :name %></th>
        </tr>
      </thead>
      
      <tbody>
        <% @tasks.each do |task| %>
          <tr>
            <td><%= link_to task.name, @user %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>