<% provide(:title, @user.name) %>
<h1>タスク詳細</h1>

<div class="row">
  <div class="col-md-10 col-md-offset-1">
    <table class="table table-bordered table-hover" id="details-table">
      <thead>
        <tr>
          <th><%= Task.human_attribute_name :id %></th>
          <td><%= @task.id %></td>
        </tr>
        <tr>
          <th><%= Task.human_attribute_name :name %></th>
          <td><%= @task.name %></td>
        </tr>
        <tr>
          <th><%= Task.human_attribute_name :details %></th>
          <td><%= raw Rinku.auto_link(h(@task.details)) %>
          </td>
        </tr>
        <tr>
          <th><%= Task.human_attribute_name :created_at %></th>
          <td><%= l(@task.created_at, format: :long) %></td>
        </tr>
        <tr>
          <th><%= Task.human_attribute_name :updated_at %></th>
          <td><%= l(@task.updated_at, format: :long) %></td>
        </tr>
      </thead>
    </table>
    <%= link_to "編集", edit_user_task_path, class: "btn btn-success btn-lg btn-form" %>
    <%= link_to "削除", user_task_path, method: :delete,
        data: { confirm: "削除してよろしいですか？"},
        class: "btn btn-danger btn-lg btn-form" %>
  </div>
</div>