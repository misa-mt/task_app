<% provide(:title, @user.name) %>
<h1>プロフィール</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <table class="table table-bordered table-hover" id="userprof-table">
      <thead>
        <tr>
          <th><%= User.human_attribute_name :id %></th>
          <td><%= @user.id %></td>
        </tr>
        <tr>
          <th><%= User.human_attribute_name :name %></th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th><%= User.human_attribute_name :email %></th>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <th><%= User.human_attribute_name :created_at %></th>
          <td><%= l(@user.created_at, format: :long) %></td>
        </tr>
      </thead>
    </table>
    <%= link_to "ユーザー情報編集", edit_user_path, class: "btn btn-primary btn-lg btn-form" %>
  </div>    
</div>
