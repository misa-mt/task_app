<% provide(:title, 'Edit User') %>
<h1>ユーザー情報編集</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @user, local: true) do |f| %>
      <%= render partial: 'shared/error_messages', locals: { obj: @user } %>
      
      <%= f.label :name, class: "label-form" %>
      <%= f.text_field :name, class: "form-control" %>
      
      <%= f.label :email, class: "label-form" %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password, class: "label-form" %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, class: "label-form" %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit "更新", class: "btn btn-primary btn-form" %>
      <div class="btn btn-default btn-form">キャンセル</div>
    <% end %>
  </div>
</div>